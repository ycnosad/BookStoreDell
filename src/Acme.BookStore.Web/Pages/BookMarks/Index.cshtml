@page
@using Acme.BookStore.Web.Pages.BookMarks
@model Acme.BookStore.Web.Pages.BookMarks.IndexModel
@using Acme.BookStore.Localization
@using Acme.BookStore.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<BookStoreResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/BookMarks/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["BookMarks"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewBookMarkButton"
                            text="@L["NewBookMark"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="BookMarksTable"></abp-table>
    </abp-card-body>
</abp-card>
